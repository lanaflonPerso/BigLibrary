<?xml version="1.0" encoding="UTF-8"?>
<!--============================================================ Deployment 
	Descriptor: web.xml ============================================================= -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Library</display-name>
  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>ua.khai.slynko.library.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MailServlet</servlet-name>
    <servlet-class>ua.khai.slynko.library.mail.MailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MailServlet</servlet-name>
    <url-pattern>/send</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.khai.slynko.library.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>AlreadyLoggedInFilter</filter-name>
    <filter-class>ua.khai.slynko.library.web.filter.AlreadyLoggedInFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AlreadyLoggedInFilter</filter-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/home</url-pattern>
    <url-pattern>/login.jsp</url-pattern>
    <url-pattern>/forgotPassword.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>DoLogoutFilter</filter-name>
    <filter-class>ua.khai.slynko.library.web.filter.DoLogoutFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DoLogoutFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>ua.khai.slynko.library.web.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>listAdminCatalog listLibrarians listReaders updateBook addBook blockUnblockUser addLibrarian</param-value>
    </init-param>
    <init-param>
      <param-name>reader</param-name>
      <param-value>listPersonalArea</param-value>
    </init-param>
    <init-param>
      <param-name>librarian</param-name>
      <param-value>listReadersRequests confirmRequestCommand</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>logout noCommand viewSettings updateProfile</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>login signUp listCatalog forgotPassword</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <listener>
    <listener-class>ua.khai.slynko.library.web.listener.ContextListener</listener-class>
  </listener>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>en</param-value>
  </context-param>
  <context-param>
    <param-name>locales</param-name>
    <param-value>/WEB-INF/locales.properties</param-value>
  </context-param>
  <listener>
    <listener-class>ua.khai.slynko.library.web.listener.ContextListener</listener-class>
  </listener>
</web-app>